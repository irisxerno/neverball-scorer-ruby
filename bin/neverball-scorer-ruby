#!/usr/bin/env ruby
require "optparse"
require "scores"

sets = ["easy", "medium", "hard"]
neverball_scores="#{ENV["HOME"]}/.neverball/Scores"
reverse = true

OptionParser.new do |o|
  o.on("-t","--sets [list]","List of sets", Array) do |v|
    sets = v
  end
  o.on("-s","--scores [dir]","Location of your scores directory") do |v|
    neverball_scores = File.expand_path v
  end
  o.on("-r", "--reverse", "makes the TUI display letters for uncollected achievements") do |v|
    reverse = v
  end
end.parse!

Game.new(sets, neverball_scores, reverse)
begin
  sleep # The folder listener will update the TUI on its own
rescue Interrupt # The user probably entered Ctrl-C
  exit(0)
end
